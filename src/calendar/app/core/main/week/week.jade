.week(ng-repeat='day in weekly.dotw track by $index')
  .day(ng-class='{"past": weekly.checkDate(day)}')
    .date(ng-if='!weekly.BookAPIService.bookedDay(day)')
      .num(ng-class='{"today": day==weekly.today}')
        span(ng-show='day!=0 && !weekly.BookAPIService.bookedDay(day)', ng-click='weekly.openModal(day, weekly.month, weekly.BookAPIService.bookedDay(day), $index)') {{day}}
        span(ng-show='day!=0 && weekly.BookAPIService.bookedDay(day)', ng-click='weekly.openModal(day, weekly.month, weekly.BookAPIService.bookedDay(day), $index)') {{day}}

    .date(ng-if='weekly.BookAPIService.bookedDay(day)')
      .num(ng-class='{"today": day==weekly.today}', class='{{weekly.BookAPIService.getEventUser(weekly.month, day)}}-bg')
        span(ng-show='day!=0 && !weekly.BookAPIService.bookedDay(day)', ng-click='weekly.openModal(day, weekly.month, weekly.BookAPIService.bookedDay(day), $index)') {{day}}
        span(ng-show='day!=0 && weekly.BookAPIService.bookedDay(day)', ng-click='weekly.openModal(day, weekly.month, weekly.BookAPIService.bookedDay(day), $index)') {{day}}